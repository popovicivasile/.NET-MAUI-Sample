<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AIOService_v1.Pages.ErrorSearch"
             Title="Type the error to search">
    <VerticalStackLayout>
           <SearchBar 
           x:Name="ErrorSearchBar"
           Placeholder="Search..."
           VerticalOptions="Start" 
           HorizontalOptions="FillAndExpand" 
           Margin="0,0,0,30" />
        <Button 
           Text="Search"
           VerticalOptions="Center" 
           HorizontalOptions="CenterAndExpand"            
           WidthRequest="200"
           HeightRequest="50" 
           Margin="0,0,0,30" 
           Clicked="OnSearchButtonClicked"/>
        <Label 
           x:Name="ResultLabel"
           VerticalOptions="Center" 
           HorizontalOptions="CenterAndExpand" 
           FontSize="24"/>
    </VerticalStackLayout>
</ContentPage>